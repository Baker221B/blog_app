<p id="notice"><%= notice %></p>
​
<div class="panel panel-primary">
  <div class="panel-heading">
    <h2><%= @blog_post.title %><h2>
  </div>
  <div class="panel-body">
    <p>by <strong><%= @blog_post.user.email %></strong> <span class="posted-at">posted at: <%= @blog_post.created_at.strftime('%r') %></span></p>
    <p><%= @blog_post.blog_entry %></p>
  </div>
          <% if current.user.id == blog_post.user.id %>
  <div class="panel-footer">
    <%= link_to 'Edit', edit_blog_post_path(@blog_post), class:"btn btn-warning" %>
    <%= link_to 'Destroy', @blog_post, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
  </div>
</div>
​
<div class="panel panel-success">
  <div class="panel-heading">
    Make a Comment
  </div>
  <div class="panel-body">
    <%= render 'comments/form' %>
  </div>
</div>
​
<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Comments</h4>
  </div>
  <% @blog_post.comments.each do |comment| %>
  <div class="panel-body">
    <p><strong><%= comment.user.email %></strong>said: </p>
    <p><%= comment.comment_entry %></p>
    <p><span class="posted-at">posted at:
      <%= comment.created_at.strftime('%r') %></span> </p>
      <%= link_to "Edit"
    edit_blog_post_comment_path(comment) %>
  </div>
<% link_to "Delete", [comment.blog_post, comment], method: :delete %>

  <% end %>
</div>
